{
  "name": "media-chrome",
  "version": "0.0.5",
  "description": "Custom elements (web components) for making audio and video player controls that look great in your website or app.",
  "main": "dist/media-chrome.js",
  "files": [
    "./dist/*",
    "README.md",
    "./examples/*"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && node build.mjs",
    "dev": "npm run clean && node build.mjs --dev",
    "test": "echo \"Error: no test specified\" && exit 1",
    "publish-patch": "yarn run build && np patch --no-tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/muxinc/media-chrome.git"
  },
  "keywords": [
    "webcomponent",
    "html5",
    "video",
    "audio",
    "media",
    "player",
    "controls"
  ],
  "author": "@muxinc",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/muxinc/media-chrome/issues"
  },
  "homepage": "https://github.com/muxinc/media-chrome#readme",
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "babel-loader": "^8.1.0",
    "chokidar": "^3.4.3",
    "esbuild": "^0.8.26",
    "lodash": "^4.17.20",
    "rimraf": "^3.0.2",
    "serve-handler": "^6.1.3",
    "tiny-glob": "^0.2.8"
  }
}
